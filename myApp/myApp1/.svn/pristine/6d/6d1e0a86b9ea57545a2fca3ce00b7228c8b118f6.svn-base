@charset "utf-8";
html{
	font-size: 625%; /*相当于100px*/
}
*{
	margin: 0px;
	padding: 0px;
}
body{
	background-color: #fff;
	font-family: "Helvetica Neue", Helvetica, Arial, "Microsoft Yahei UI", "Microsoft YaHei", SimHei, "\5B8B\4F53", simsun, sans-serif;
	font-size: 0.16rem;
}
a{
	text-decoration: none;
}
ul,ol{
	list-style: outside none; 
}
img {
	display: block;
	max-width: 100%;
}
div,figure,figcaption{
	box-sizing:border-box;
}
.clearfix:after{
	content: '.';
	display: block;
	clear: both;
	height: 0;
	visibility: hidden;
}
.none {
	display: none;
}
#header{
	width: 100%;
	height: 0.45rem;
	background-color: #333;
	position: fixed;
	top: 0;
	z-index: 9999;
}
#header .link {
	height: .45rem;
	line-height: .45rem;
	color: #eee;
}
#header .link li{
	width: 25%;
	text-align: center;
	float: left;
}
#header .link a{
	color: #eee;
	display: block;
}
#header .active a,#header .link a:hover{
	background-color: #000;
}

#adver{
	max-width: 6.4rem;
	margin: 0 auto;
	padding: .45rem 0 0 0;
}
#footer{
	max-width: 6.4rem;
	color: #777;
	text-align: center;
	padding: .1rem 0;
	background-color: #222;
	margin: 0 auto;
}
#footer .top{
	padding: 0 0 0.05rem 0;
}

#search{
	max-width: 6.4rem;
	height: 0.33rem;
	margin: 0 auto;
	background-color: #ddd;
	position: relative;
	padding: 0.03rem 0 0 0;
}

#search .search{
	width: 95%;
	height: .27rem;
	border-radius: 0.04rem;
	border: none;
	outline: none;
	background-color: #fff;
	display: block;
	margin: 0 auto;
	font-size: .14rem;
	padding: 0 .05rem;
}

#search .button{
	display: block;
	outline: none;
	width: .5rem;
	height: .27rem;
	border-top-right-radius: 0.04rem;
	border-bottom-right-radius: 0.04rem;
	background-color: #eee;
	position: absolute;
	top: 0.03rem;
	right: 1%;
	color: #666;
	border:none;
}

#tour{
	max-width: 6.4rem;
	margin: .1rem auto 0 auto;
}
#tour h2{
	text-align: center;
	color: #666;
	font-size: .26rem;
}
#tour h3{
	text-align: center;
	font-weight: normal;
	color: #666;
	font-size: .16px;
	margin: .05rem 0 .1rem 0;
}

#tour figure{
	width: 50%;
	float: left;
	background-color: #eee;
	font-size: .16rem;
	padding: 0 0 .05rem 0;
}
#tour figure img{
	padding: .02rem;
	vertical-align: middle;
	border-radius: .04rem;
}
#tour figcaption{
	color: #666;
	font-size: .16rem;
	background-color: #;
	padding: .02rem .05rem;
}
#tour h4,#tour p{	
	font-weight: normal;
	white-space: nowrap;
	overflow: hidden;
	text-overflow:ellipsis;
}

#tour .info{
	padding: .1rem 0 0 0;
	font-size: .16rem;
}
#tour .price{
	color: #f60;
}
#tour .price strong{
	letter-spacing: .01rem;
}
#tour .sat{
	position: relative;
	float: right;
	right: .05rem;
}

/*****************information**************************/
#headline{
	max-width: 6.4rem;
	margin: 0 auto;
	padding: .45rem 0 0 0;
	position: relative;
}
#headline hgroup{
	position: absolute;
	top: 48%;
	left: 10%;
	color: #eee;
}

.list{
	max-width:6.4rem;
	margin: .15rem auto;
	font-size: .16rem;
	padding: 0 .1rem;
	color: #666;
}
.list h2{
	font-size: .2rem;
	border-bottom: 0.01rem dashed #999;
	padding-bottom: .15rem;
}

.about p{
	line-height: 2;
	margin: .2rem 0;
}
.about address{
	font-style: normal;
	line-height: 1.6;
	margin: .2rem 0;
}

.information figure:after{
	content: '.';
	display: block;
	clear: both;
	height: 0;
	visibility: hidden;
}
.information figure{
	margin: .15rem 0 0 0;
	position: relative;
}
.information figure img{
	float: left;
	width: 50%;
}
.information figure figcaption{
	width: 48%;
	float: right;

}

.information .title{
	border:none;
	padding: 0 0 0.05rem 0;
	/*********谷歌 设置显示行数********/
	display: -webkit-box;
	overflow: hidden;
	-webkit-line-clamp:1;
	-webkit-box-orient:vertical;
	/*********************************/
}
.information .samll_title{
	font-weight: normal;
	padding: 0;
	display: -webkit-box;
	overflow: hidden;
	-webkit-line-clamp:2;
	-webkit-box-orient:vertical;
}
.information .price{
	color:#f60;
	position: absolute;
	bottom: 0;
}
.information .price strong{
	font-size: .26rem;
}

/*媒体查询  大于480  小于640*/
@media (min-width: 480px) and (max-width: 640px){
	#tour h2{
		font-size: .26rem;
	}
	#tour h3,#footer,#tour figcaption,#tour .info,.list{
		font-size: .16rem;
	}

	#headline h2{
		font-size: .22rem;
	}

	#headline h3{
		font-size: .16rem;
	}
	.list h2{
		font-size: .2rem;
	}
}

/*小于480px*/
@media (max-width: 480px){
	#tour h2{
		font-size: .20rem;
	}
	#tour h3,#tour figcaption,#tour .info,.list{
		font-size: .14rem;
	}
	#footer{
		font-size: .12rem;
	}

	#headline h2{
		font-size: .14rem;
	}

	#headline h3{
		font-size: .12rem;
	}
	.list h2{
		font-size: .17rem;
	}
}






